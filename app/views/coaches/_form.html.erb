  <fieldset>
    <h2>Personal Information</h2>
      <%= f.fields_for :user do |users_form| %>
        <p><%= users_form.label(:email, "E-mail address") %><br>
          <%= users_form.text_field :email %>
        </p>
        <p><%= users_form.label(:password, "Password") %><br>
          <%= users_form.password_field :password %>
        </p>
      <% end %>
      <p><%= f.label(:name, "Name") %></p><p class="note">No official name necessary, you can use the name you want to be called. Just be sure to remember what you picked. *</p>
      <p><%= f.text_field :name %></p>
      <p>
        <%= f.check_box :female %>
        <%= f.label(:female, "female/I have some female sex characteristics.") %>
      </p>
    </fieldset>
    <fieldset>
      <h2>Which language(s) can you teach in?</h2>
      <p class="note">Please select one or both.</p>
      <p>
        <%= f.check_box :language_de %>
        <%= f.label(:language_de, "German") %>
      </p>
      <p>
        <%= f.check_box :language_en %>
        <%= f.label(:language_en, "English") %>
      </p>
    </fieldset>
    <fieldset>
      <p>
        <%= f.check_box :notifications %>
        <%= f.label(:notifications, "Notifications about upcoming events") %>
      </p>
      <p class="note">By signing up as a coach, your e-mail will be added to our coaches pool e-mail list. We use this list to inform coaches about upcoming workshops.
It would be great to have you on board as a coach again.</p>
    </fieldset>
